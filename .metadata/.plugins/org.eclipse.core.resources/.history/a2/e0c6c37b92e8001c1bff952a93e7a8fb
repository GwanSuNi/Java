package Practice;

public class Array4 {

	public static void main(String[] args) {
		int a[][] = { { 3, 5, 6, 9 }, { 2, 1, 4, 7 }, { 8, 7, 1, 6 }, { 3, 5, 4, 6 } };
		int Hsum, LDiagonalSum = 0, RDiagonalSum = 0;
		int count = 0;
		int Vsum[] = new int[4];

		for (int i = 0; i < a.length; i++) {
			Hsum = 0;
			for (int j = 0; j < a[i].length; j++) {
				System.out.printf("%3d ", a[i][j]);
				Hsum += a[i][j];
				Vsum[j] += a[i][j];
				// diagonal calc
				if (i == j) {
					++count;
					LDiagonalSum += a[i][j];
				}
				if ( i + j == a.length ) {
					++count;
					
				}
			}
			System.out.printf("%3d\n", Hsum);
		}

		for (int i = 0; i < a[0].length; i++)
			System.out.printf("%3d ", Vsum[i]);

		System.out.printf("\n\nL대각선 합: %d\t 평균: %f", LDiagonalSum, (double) LDiagonalSum / count);
		System.out.printf("\n\nR대각선 합: %d\t 평균: %f", LDiagonalSum, (double) LDiagonalSum / count);

	}

}
